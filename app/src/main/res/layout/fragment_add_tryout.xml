<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddTryout.AddTryoutFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:visibility="gone"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/textView_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="8dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/textView_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="8dp"
            android:text=""
            android:textColor="@color/textColor2"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="8dp"
                android:text="Uploading..."
                android:textColor="@color/textColor2"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="visible" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="@dimen/page_margin"
                android:text="Pilih Halaman"
                android:textColor="@color/textColor2"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Home"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_informasi"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Informasi"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_tryout"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Tryout"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:text="Pilih Kategori"
                android:textColor="@color/textColor2"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimary">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_pilihKategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:text="Kategori dipilih"
                android:textColor="@color/textColor2"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_kategoriDipilih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:text="Masukan Judul"
                android:textColor="@color/textColor2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/text_border"
                android:gravity="top|start"
                android:hint="Title"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="8"
                android:minLines="3"
                android:padding="6dp"
                android:scrollHorizontally="true"
                android:textSize="14sp"
                tools:ignore="Autofill" />


            <!--        thumbnail-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="14dp"
                    android:text="Thumbnail"
                    android:textColor="@color/textColor2"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/text_border"
                    android:gravity="top|start"
                    android:hint="Link gambar"
                    android:inputType="textUri|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:minLines="3"
                    android:padding="6dp"
                    android:scrollHorizontally="true"
                    android:textSize="14sp"
                    tools:ignore="Autofill" />

                <ImageView
                    android:id="@+id/imageView_thumnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/image_placeholder" />

                <Button
                    android:id="@+id/button_reset_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginBottom="4dp"
                    android:text="RESET" />
            </LinearLayout>

            <!--        image header-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="14dp"
                    android:text="Link tryout"
                    android:textColor="@color/textColor2"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_webUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/text_border"
                    android:gravity="top|start"
                    android:hint="Link website"
                    android:inputType="textUri|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:minLines="3"
                    android:padding="6dp"
                    android:scrollHorizontally="true"
                    android:textSize="14sp"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox_premium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="@dimen/page_margin"
                android:layout_marginEnd="22dp"
                android:text="Premium" />

            <CheckBox
                android:id="@+id/checkbox_pilihanEditor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:text="Pilihan Editor" />

            <Button
                android:id="@+id/cardView_upload"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="@dimen/page_margin"
                android:layout_marginTop="@dimen/page_margin"
                android:layout_marginEnd="@dimen/page_margin"
                android:layout_marginBottom="@dimen/page_margin"
                android:text="UNGGAH"
                android:backgroundTint="@color/colorPrimary" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>