<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.view.HomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.cardview.widget.CardView
                android:id="@+id/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bgBlue"
                app:cardElevation="0dp"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/page_margin"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/page_margin"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/textView_greating_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="4dp"
                            android:text="Hi"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/textView_greatingShimmer_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentStart="true"
                            android:visibility="invisible">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="18dp"
                                android:backgroundTint="@color/grey"
                                app:cardCornerRadius="10dp" />
                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <TextView
                            android:id="@+id/textView_name_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView_greating_home"
                            android:layout_marginStart="0dp"
                            android:text="Banmbang bang bang"
                            android:textColor="@color/textColor1"
                            android:textSize="16sp" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/textView_namaShimmer_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView_greating_home"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="4dp"
                            android:visibility="invisible">

                            <androidx.cardview.widget.CardView
                                android:layout_width="200dp"
                                android:layout_height="18dp"
                                android:backgroundTint="@color/grey"
                                app:cardCornerRadius="10dp" />
                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <RelativeLayout
                            android:id="@+id/relative_notif_home"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/custom_ripple"
                            android:layout_marginEnd="12dp"
                            android:layout_toStartOf="@+id/circleImage_photo_home">

                            <ImageView
                                android:id="@+id/imageView_notif_home"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_baseline_notifications" />

                        </RelativeLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circleImage_photo_home"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/image_ciruseless"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1dp" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/photoShimmer_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:visibility="invisible">

                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/grey"
                                app:cardCornerRadius="100dp" />
                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/page_margin"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/textView_quote_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.8"
                            android:text="Lorem ipsum dolor init itu tulisan dummy yang ga ada arti apa apa dan sering digunakan oleh develoepr"
                            android:textAlignment="center"
                            android:textColor="@color/textColor1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView_talker_home0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView_quote_home"
                            android:layout_marginTop="4dp"
                            android:layout_toStartOf="@+id/textView_talker_home"
                            android:alpha="0.7"
                            android:text="-- "
                            android:textColor="@color/textColor1"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView_talker_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView_quote_home"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:alpha="0.7"
                            android:text="Hbaib"
                            android:textColor="@color/textColor1"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView_talker_home2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView_quote_home"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:layout_toEndOf="@+id/textView_talker_home"
                            android:alpha="0.7"
                            android:text=" --"
                            android:textColor="@color/textColor1"
                            android:textSize="12sp" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/quoteShimmer_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:visibility="invisible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:backgroundTint="@color/grey"
                                    app:cardCornerRadius="10dp" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="25dp"
                                    android:backgroundTint="@color/grey"
                                    app:cardCornerRadius="10dp" />
                            </LinearLayout>

                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bgBlue"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="24dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:alpha="0.2"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="11dp" />

                        <EditText
                            android:id="@+id/editText_search_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_toStartOf="@+id/cardView_search_home"
                            android:autofillHints="Mau belajar apa hari ini ?"
                            android:background="@android:color/transparent"
                            android:cursorVisible="true"
                            android:hint="Mau belajar apa hari ini ?"
                            android:inputType="text"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="invisible">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:backgroundTint="@color/grey"
                                app:cardCornerRadius="11dp" />
                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_search_home"
                            android:layout_width="40dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"
                            android:background="@color/white"
                            app:cardCornerRadius="11dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_search"
                                app:tint="@color/black" />
                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/kategorimateri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/page_margin"
                        android:layout_marginTop="8dp"
                        android:text="Kategori Materi"
                        android:textColor="@color/textColor1"
                        android:textSize="18sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/kategoriContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/page_margin"
                                android:paddingEnd="@dimen/page_margin"
                                android:visibility="visible">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerView_kategoriMateri_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="8dp"
                                    android:clipToPadding="false"
                                    android:scrollbars="none" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardView_allKateoriMateri_home"
                                    android:layout_width="83dp"
                                    android:layout_height="87dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="4dp"
                                    android:backgroundTint="@color/colorPrimary"
                                    app:cardCornerRadius="15dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/imageView_itemKategori"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center"
                                        android:alpha="0.8"
                                        android:src="@drawable/ic_all_kategori" />

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <include layout="@layout/shimmer_kategori_materi_home" />

                        </RelativeLayout>

                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lin_listOne_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/page_margin"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="@dimen/page_margin">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.9"
                                android:text="Pilihan Editor"
                                android:textColor="@color/textColor2"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView_allListOne_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:alpha="0.6"
                                android:text="Lihat Semua"
                                android:textColor="@color/textColor2"
                                android:textSize="12sp"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/grey" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_listOne_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="8dp"
                            android:clipToPadding="false" />
                    </LinearLayout>

                    <include layout="@layout/shimmer_list_one_home" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lin_listTwo_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/page_margin"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="@dimen/page_margin">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.8"
                                android:text="Materi"
                                android:textColor="@color/textColor2"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView_allListTwo_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:alpha="0.6"
                                android:text="Lihat Semua"
                                android:textColor="@color/textColor2"
                                android:textSize="12sp"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/grey" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_listTwo_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="8dp"
                            android:clipToPadding="false" />
                    </LinearLayout>

                    <include layout="@layout/shimmer_list_two_home" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/bottom_sheet_kategori_materi" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>